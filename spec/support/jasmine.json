{
  "spec_dir": "build/",
  "spec_files": [
      "**/*[sS]pec.js"
  ],
  "helpers": [
      "helpers/**/*.js"
  ],
  "random": true,
  "stopSpecOnExpectationFailure": false,
  "stopOnSpecFailure": false,
  "failFast": false,
  "displaySuiteNumber": true,
  "reporters": [
    {
      "name": "jasmine-spec-reporter",
      "options": {
        "prefixes": {
          "success": "✅ ",
          "failure": "❌ ",
          "pending": "- "
        }
      }
    }
  ]
}